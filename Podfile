  pod 'AEPSignal', :git => 'git@github.com:adobe/aepsdk-core-ios.git', :branch => 'main'
  pod 'AEPRulesEngine', :git => 'git@github.com:adobe/aepsdk-rulesengine-ios.git', :branch => '1.0.0-beta.1'

  target 'ACPCoreTests' do
    # Pods for testing
  end

end

